﻿@model CumulativeProject1.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<script>
    window.onload = function () {
        document.getElementById("delete").addEventListener("click", function () {
            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/Teacher/Delete/@Model.teacherId');
            xhr.send();
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    location.href = '/Teacher/List';
                    console.log('successful')
                }
            }
        })
    }
</script>
<div class="edu-breadcrumb-area breadcrumb-style-1 ptb--60 ptb_md--40 ptb_sm--40 bg-image">
    <div class="container eduvibe-animated-shape">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner text-start">
                    <div class="page-title">
                        <h3 class="title">Single Teacher</h3>
                        <p>This page should be showing information about a Teacher</p>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="row g-5">

                <!-- Start Event List  -->
                <div class="col-lg-12" data-sal-delay="150" data-sal="slide-up" data-sal-duration="800">
                    <div class="edu-event event-list radius-small">
                        <div class="inner">

                            <div class="content">
                                <div class="content-left">
                                    <h5 class="title">@Model.teacherFname @Model.teacherLname</h5>
                                    <ul class="event-meta">
                                        <li><i class="icon-calendar-2-line"></i> @Convert.ToDateTime(Model.hiredate).ToString("dd-MMM-yyyy")</li>
                                        <li>@Model.employeenumber @Model.salary</li>
                                    </ul>
                                </div>
                                <div class="read-more-btn">
                                    <a class="edu-btn btn-dark" href="/Teacher/List">Back To List<i class="icon-arrow-right-line-right"></i></a>
                                    <a class="edu-btn btn-dark" href="/Teacher/Modify/@Model.teacherId">Modify<i class="icon-arrow-right-line-right"></i></a>
                                    <button  id="delete" class="edu-btn btn-danger">Delete</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>



            </div>


        </div>
    </div>
</div>

