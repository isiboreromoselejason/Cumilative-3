﻿@model CumulativeProject1.Models.Teacher

@{
    ViewBag.Title = "Delete";
}

<div class="edu-breadcrumb-area breadcrumb-style-1 ptb--60 ptb_md--40 ptb_sm--40 bg-image">
    <div class="container eduvibe-animated-shape">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner text-start">
                    <div class="page-title">
                        <h3 class="title">Delete Teacher</h3>
                   </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="row g-5">

                <!-- Start Event List  -->
                <div class="col-lg-12" data-sal-delay="150" data-sal="slide-up" data-sal-duration="800">
                    <div class="edu-event event-list radius-small">
                        <div class="inner">

                            <div class="content">
                                <div class="content-left">
                                    <h5 class="title">Are you sure you want to delete @Model.teacherFname @Model.teacherLname?</h5>
                                    <ul class="event-meta">
                                        <li><p>This action cannot be undone.</p></li>
                                        <li>
                                            <form method="POST" action="/Teacher/Delete/@Model.teacherId">
                                                <button class="edu-btn btn-danger">
                                                    Confirm Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                <div class="read-more-btn">
                                    <a class="edu-btn btn-dark" href="/Teacher/List">Back To List<i class="icon-arrow-right-line-right"></i></a>
                                    <a class="edu-btn btn-dark" href="/Teacher/Modify/@Model.teacherId">Modify<i class="icon-arrow-right-line-right"></i></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>



            </div>


        </div>
    </div>
</div>

