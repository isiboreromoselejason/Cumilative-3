@model CumulativeProject1.Models.Teacher
@{
    ViewBag.Title = "Update";
}


<div class="edu-breadcrumb-area breadcrumb-style-1 ptb--60 ptb_md--40 ptb_sm--40 bg-image">

    <div class="container checkout-page-style">
        <div class="row">
            <div class="col-lg-8">
                <div class="login-form-box">
                    <h3 class="mb-30">Update Teacher</h3>
                    <a href="/Teacher/List" class="rn-btn edu-btn w-100 mb--30">
                        <span>Back</span>
                    </a>
                    <form class="login-form" method="POST" action="/Teacher/Update">
                        <div class="input-box mb--30">
                            <input type="text" name="TeacherFname" value="@Model.teacherFname" placeholder="FirstName" />
                        </div>

                        <input type="hidden" name="id" value="@Model.teacherId" />

                        <div class="input-box mb--30">
                            <input type="text" placeholder="LastName" name="TeacherLname" value="@Model.teacherLname" />
                        </div>
                        <div class="input-box mb--30">
                            <label>Hire Date</label>
                            <input type="date" name="HireDate" value="@Model.hiredate" />
                        </div>
                        <div class="input-box mb--30">
                            <input type="text" placeholder="Employee Number" value="@Model.employeenumber" name="EmployeeNumber" />
                        </div>
                        <div class="input-box mb--30">
                            <input type="text" placeholder="Salary" name="Salary" value="@Model.salary" />
                        </div>
                        <button class="rn-btn edu-btn w-100 mb--30" id="create">
                            <span>Update</span>
                        </button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


